---
import Layout from '@layouts/Default.astro';
import RecentBlogPosts from '@components/generic/RecentBlogPosts.astro';
import MobileSocials from '@components/home/MobileSocials.astro';
import { Pill } from '@eliancodes/brutal-ui';
import { Button } from '@eliancodes/brutal-ui';
import { Card } from '@eliancodes/brutal-ui';
import { Image } from "astro:assets";

const builtWith = [
  { name: 'accessibility', url: '/work/tags/accessibility' },
  { name: 'design systems', url: '/work/tags/design-systems' },
  { name: 'ux design', url: '/work/tags/ux-design', },
  { name: 'ux research', url: '/work/tags/ux-research' },
  { name: 'design thinking', url: '/work/tags/design-thinking' },
];
---

<Layout
  title='Home'
  pageTitle='Cintia Romero |Â Home'
  description="I'm Cintia Romero (she/her)! I craft inclusive digital experiences that make everyday life easier. Currently, I'm a Senior Staff Designer at Adobe, part of the Product Equity team with a focus on accessibility and inclusive design."
>
  <main class='bg-pink p-6'>
    <MobileSocials />
    <section id='about' class='grid md:grid-cols-8 gap-8 mt-4'>
      <h2 class='hidden'>About Cintia Romero</h2>
      <div class='lg:col-span-4 md:col-span-8 sm:col-span-8'>
        <Card color="#2dd4bf">
          <div class='flex flex-col justify-between items-start gap-4'>
            <p class='mt-4 outfit text-2xl md:text-5xl lg:text-7xl'>
              Hello ðŸ‘‹
            </p>
            <p class='mt-2 outfit text-xl md:text-2xl lg:text-3xl'>
              I'm Cintia Romero (she/her)! I craft inclusive digital experiences that make everyday life easier.
            </p>
            <p class='mt-2 outfit text-xl md:text-2xl lg:text-3xl'>
              Currently, I'm a Senior Staff Designer at Adobe, part of the Product Equity team with a focus on accessibility and inclusive design.
            </p>
            <Button target={'_self'} href='/myself/'>
              Learn about me &rarr;
            </Button>
          </div>
        </Card>
      </div>
      <div class='lg:col-span-2 md:col-span-4 sm:col-span-8'>
        <Image class="object-cover w-full rounded-lg border-3 border-black card-shadow" format="webp" width={800} height={800} src="/profile-1.webp" alt="Cintia's face" />
      </div>
      <div class='lg:col-span-2 md:col-span-4 sm:col-span-8'>
        <Card color="#fb923c">
          <h2 class='text-2xl md:text-4xl lg:text-6xl mb-8 dm-serif'>
            My skills
          </h2>
          <ul class='flex gap-4 flex-wrap'>
            {
              builtWith.map((item) => (
                <li>
                  <Pill>
                    <a
                      class='sanchez'
                      href={item.url}
                      title={`Go to ${item.name}`}
                    >
                      {item.name}
                    </a>
                  </Pill>
                </li>
              ))
            }
          </ul>
        </Card>
      </div>      
    </section>
    <RecentBlogPosts />
  </main>
</Layout>
